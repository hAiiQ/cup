# Database
# For local development (SQLite)
DATABASE_URL="file:./prisma/dev.db"

# For production on Render (PostgreSQL) - Render provides this automatically
# DATABASE_URL="postgresql://username:password@host:port/database"

# JWT Secret
JWT_SECRET="your-super-secret-jwt-key-here"

# Social Media API Configuration
# Twitch API (Required for automatic verification)
TWITCH_CLIENT_ID="your-twitch-client-id"
TWITCH_ACCESS_TOKEN="your-twitch-access-token"

# Instagram API (Optional - leave empty to skip verification)
INSTAGRAM_ACCESS_TOKEN="your-instagram-access-token"

# Discord Bot (Required for Discord verification)
DISCORD_BOT_TOKEN="your-discord-bot-token"
DISCORD_SERVER_ID="your-discord-server-id"

# Admin Credentials
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="admin123"
